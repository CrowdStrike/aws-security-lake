{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template to Create Roles and Policies for BYOD Configuration. This only creates the necessary permissions, it does not create subscribers",
  "Parameters": {
    "accountId": {
      "Type": "String",
      "Description": "AWS Account number of Data Provider"
    },
    "customSource": {
      "Type": "String",
      "Description": "Name of the customSource"
    }
  },
  "Resources": {
    "SecurityLakeDataProviderPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "ManagedPolicyName": {
          "Fn::Join": [
            "",
            [
              "SecurityLakeGlueInvocationRole-",
              {
                "Ref": "customSource"
              }
            ]
          ]
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "1",
              "Effect": "Allow",
              "Action": ["s3:GetObject", "s3:PutObject"],
              "Resource": "arn:aws:s3:::aws-security-data-lake-*/*"
            }
          ]
        }
      }
    },
    "SecurityLakeGlueInvocationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
        ],
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "SecurityLakeGlueInvocationRole-",
              {
                "Ref": "customSource"
              }
            ]
          ]
        },
        "Description": "Role to allow AWS Glue Crawlers access to S3 resources",
        "Policies": [
          {
            "PolicyName": "GlueS3Permissions",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "1",
                  "Effect": "Allow",
                  "Action": ["s3:GetObject", "s3:PutObject"],
                  "Resource": "arn:aws:s3:::aws-security-data-lake-*/*"
                }
              ]
            }
          }
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "1",
              "Effect": "Allow",
              "Principal": {
                "Service": "glue.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        }
      }
    },
    "LogProviderRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "",
            [
              "SecurityLakeLogProviderRole-",
              { "Ref": "accountId" },
              "-",
              { "Ref": "customSource" }
            ]
          ]
        },
        "Description": "Role to allow AWS Glue Crawlers access to S3 resources",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:iam::",
                      {
                        "Ref": "accountId"
                      },
                      ":root"
                    ]
                  ]
                }
              },
              "Action": "sts:AssumeRole",
              "Condition": {}
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "LogProviderRole": {
      "Description": "Log Provider Role ARN",
      "Value": { "Fn::GetAtt": ["LogProviderRole", "Arn"] }
    },
    "SecurityLakeGlueInvocationRole": {
      "Description": "SecurityLakeGlueInvocationRole",
      "Value": { "Fn::GetAtt": ["SecurityLakeGlueInvocationRole", "Arn"] }
    }
  }
}
